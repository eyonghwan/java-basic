package game.inheritance;

public class Commoner {
	private int lv;
	private int hp;
	private int mp;
	private String name;
	
	public Commoner(String name) {
		this.name = name;
		lv = 1;
		hp = 20;
		mp = 10;
	}
	
	public void grtInfo() {
		System.out.println("현재 상태입니다.");
		System.out.println("레벨 : " + lv + ", 체력 : " + hp + ", 마나 : " + mp);
	}

}
